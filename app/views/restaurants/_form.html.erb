<div class="col-md-4 col-md-offset-4">
<%= form_for @restaurant, :html => { :multipart => true, :class => "form-group" } do |f| %>

 <div class="form-group">
  <%= f.label "Restaurant Name: " %>
  <%= f.text_field :name, :class => 'form-control' %>	
 </div>
 
 <div class="form-group">
 <%= f.label "Address: " %>
 <%= f.text_field :address, :class => 'form-control' %> 
 </div>

 <div class="form-group">
 <%= f.label "Hours: " %>
 <%= f.text_field :hours, :class => 'form-control' %>
 </div>

 <div class="form-group">
 <%= f.label "Yelp Rating: " %>
 <%= f.text_field :yelp_rating, :class => 'form-control' %>
 </div>

 <div class="form-group">
 <%= f.label "Burger Rating: " %>
 <%= f.text_field :avg_burger_rating, :class => 'form-control' %>
 </div>

  <%= f.submit 'Submit', :class => 'btn btn-primary' %>

  <% end %>

  </div>

