<div class="col-md-4 col-md-offset-4">
<%= form_for ([@restaurant, @review]), :html => { :multipart => true, :class => "form-group" } do |f| %>

 <div class="form-group">
  <%= f.label  "Restaurant : " + @restaurant.name, :class => 'form-control' %>
</div>


 
 <div class="form-group">
	<%= f.label "Burger Name :" %>
	<%= f.text_field :burger_name, :class => 'form-control' %>
 </div>

 <div class="form-group">

 <%= f.hidden_field :rating, required: true %>
 </div>



 <div class="form-group">
    <%= f.label "Picture:" %>
    <%= f.cl_image_upload :image, :class => 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label "Price:" %>
  <%= f.text_area :price, :class => 'form-control', :placeholder => "$15 etc" %>


 <div class="form-group">
	<%= f.label "Review:" %>
	<%= f.text_area :review, :class => 'form-control', :placeholder => "Review here", required: true %>
   </div>

  <div class="score"></div>
  </div>  

   <%= f.submit 'Submit Review', :class => 'btn btn-primary' %>

   <% end  %>   

    <%= link_to "Back to restaurant", @restaurant %>
   </div>   

   <script>

$(".score").raty({
  starOn: "<%= image_path('star-on.png') %>",
  starOff: "<%= image_path('star-off.png') %>",
  target: "#review_rating",
  targetKeep: true,
  targetType: "number"
});

</script>

<script type="text/javascript">
  
jQuery(function($) {
